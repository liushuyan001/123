<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <CheckBox
        android:id="@+id/cb_cart_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null" />

    <ImageView
        android:id="@+id/img_cart_product"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/cb_cart_product"
        android:src="@drawable/a_4" />

    <TextView
        android:id="@+id/txt_cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_cart_product"
        android:text="模拟标题数据：我是国家的花朵" />

    <TextView
        android:id="@+id/txt_cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_cart_product"
        android:layout_toRightOf="@id/img_cart_product"
        android:text="￥000.00"
        android:textColor="#ff0000" />

</RelativeLayout>